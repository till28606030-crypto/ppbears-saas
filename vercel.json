{
  "framework": "vite",
  "redirects": [
    { "source": "/", "destination": "/design/", "permanent": false },
    { "source": "/(login|register|admin|seller|shop)(.*)", "destination": "/design/$1$2", "permanent": false }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/design/(.*)", "destination": "/$1" },
    { "source": "/((?!assets/|.*\\..*).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "functions": {
    "api/ai/*.js": {
      "maxDuration": 60
    }
  }
}
